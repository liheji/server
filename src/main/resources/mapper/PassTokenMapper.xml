<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.liheji.server.mapper.PassTokenMapper">

    <cache-ref namespace="top.liheji.server.mapper.PassTokenMapper"/>

    <resultMap id="BaseResultMap" type="top.liheji.server.pojo.PassToken">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="tokenKey" column="token_key" jdbcType="VARCHAR"/>
        <result property="tokenNote" column="token_note" jdbcType="VARCHAR"/>
        <result property="expireTime" column="expire_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
        <result property="accountId" column="account_id" jdbcType="INTEGER"/>
        <association property="account" resultMap="top.liheji.server.mapper.AccountMapper.BaseResultMap"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,token_key,token_note,
        expire_time,update_time,create_time,
        version,account_id
    </sql>

    <select id="selectTokenByKey" resultMap="BaseResultMap">
        SELECT server_pass_token.*, server_account.*
        FROM server_pass_token,
             server_account
        WHERE token_key = #{tokenKey}
          AND account_id = server_account.id
    </select>
</mapper>
