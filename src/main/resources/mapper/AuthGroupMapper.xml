<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.liheji.server.mapper.AuthGroupMapper">

    <cache-ref namespace="top.liheji.server.mapper.AuthGroupMapper"/>

    <resultMap id="BaseResultMap" type="top.liheji.server.pojo.AuthGroup">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="codename" column="codename" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <collection property="authPermissions"
                    column="id"
                    javaType="top.liheji.server.pojo.AuthPermission"
                    fetchType="lazy"
                    select="top.liheji.server.mapper.AuthGroupPermissionsMapper.selectPermissionByGroupId">
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id,codename,name
    </sql>
</mapper>
